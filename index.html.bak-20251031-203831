  <script>
    // Config explÃ­cita de rutas del core (evita errores de localizaciÃ³n)
    if (typeof createFFmpeg === 'function') {
      window.ffmpeg = createFFmpeg({
        corePath: '/libs/ffmpeg-core.js',   // apunta al .js (el .wasm y worker se resuelven por convenciÃ³n)
        log: true
      });
