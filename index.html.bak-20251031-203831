<script>
(function(){
  if (!window.createFFmpeg && window.FFmpeg && typeof window.FFmpeg.createFFmpeg==='function') {
    window.createFFmpeg = window.FFmpeg.createFFmpeg;
    window.fetchFile = window.FFmpeg.fetchFile;
  }
})();
