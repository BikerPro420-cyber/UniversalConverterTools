    <script>
        // Page navigation
        function showPage(page) {
            // Hide all pages
            document.getElementById('home-page').style.display = 'none';
            document.querySelectorAll('.additional-pages').forEach(el => {
                el.style.display = 'none';
            });
            
            // Show selected page
            if (page === 'home') {
                document.getElementById('home-page').style.display = 'block';
            } else {
                document.getElementById(`${page}-page`).style.display = 'block';
            }
            
            // Update active nav link
            document.querySelectorAll('.nav-link').forEach(link => {
                link.style.background = '';
                link.style.color = '#3498db';
            });
            event.target.style.background = '#3498db';
            event.target.style.color = 'white';
        }

        // Language management
        let currentLanguage = 'es';
        
        const translations = {
            'es': {
                // ... your existing Spanish translations
            },
            'en': {
                // ... your existing English translations
            }
        };

        function toggleLanguage() {
            currentLanguage = currentLanguage === 'es' ? 'en' : 'es';
            updateLanguage();
        }

        function updateLanguage() {
            // ... your existing updateLanguage function
        }

        // Initialize variables for each converter
        const converters = ['audio', 'document', 'image', 'video', 'archive'];
        const fileInputs = {};
        const dropZones = {};
        const convertButtons = {};
        const progressBars = {};
        const progressBarsInner = {};
        const statusMessages = {};
        
        let selectedFiles = {};
        let selectedFormats = {};
        
        // Initialize each converter
        converters.forEach(type => {
            fileInputs[type] = document.getElementById(`${type}-file`);
            dropZones[type] = document.getElementById(`${type}-drop`);
            convertButtons[type] = document.getElementById(`${type}-convert`);
            progressBars[type] = document.getElementById(`${type}-progress`);
            progressBarsInner[type] = document.getElementById(`${type}-progress-bar`);
            statusMessages[type] = document.getElementById(`${type}-status`);
            
            selectedFiles[type] = null;
            selectedFormats[type] = null;
            
            // Set up event listeners for each converter
            setupConverter(type);
        });
        
        function setupConverter(type) {
            // ... your existing setupConverter function
        }
        
        function toggleTab(type) {
            // ... your existing toggleTab function
        }
        
